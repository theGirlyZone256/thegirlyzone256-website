    <div class="container">
        <div class="logo">
            <img src="/assets/images/logos/oos.png" alt="theGirlyZone Uganda">
        </div>
        
        
        
        <h1>Product Unavailable</h1>
        <p>We're sorry, but this product is currently out of stock. We're working hard to restock it as soon as possible.</p>
        
        <a href="/" class="home-button">
            <i class="fas fa-home"></i> Check Other Products
        </a>
        
        <div class="notify-form">
            <h2>Get notified when it's back</h2>
            <!-- NETLIFY FORM - This will automatically work -->
            <form name="restock-notifications" netlify>
                <input type="hidden" name="requested-product" id="requestedProduct">
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" placeholder="your.email@example.com" required>
                </div>
                <button type="submit" class="submit-btn">
                    <i class="fas fa-bell"></i> Notify Me
                </button>
            </form>
            
            <div class="security-note">
                <i class="fas fa-lock"></i>
                <span>Your email is secure with us. We never share your information.</span>
            </div>
        </div>
    </div>
    
    <!-- Toast notification -->
        <div class="toast" id="toast">
        <i class="fas fa-check-circle"></i>
        <div class="toast-content">
            Thank you! We'll notify you when this product is back in stock. 
            <br><small>Redirecting to homepage...</small>
        </div>
        <button class="close-toast" id="closeToast">&times;</button>
    </div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Extract product name from URL for personalization
        const referrer = document.referrer;
        let productSlug = '';
        
        if (referrer.includes('/product/')) {
            const url = new URL(referrer);
            const pathSegments = url.pathname.split('/').filter(Boolean);
            productSlug = pathSegments[pathSegments.length - 1];
        }
        
        if (productSlug) {
            document.getElementById('requestedProduct').value = productSlug;
        }

        // NETLIFY FORMS - Show loading state during submission
        const form = document.querySelector('form[netlify]');
        
        if (form) {
            form.addEventListener('submit', function() {
                // Show loading state immediately when form is submitted
                const submitBtn = this.querySelector('.submit-btn');
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Submitting...';
                submitBtn.disabled = true;
                
                // Let Netlify handle the actual form submission
                // The page will reload/redirect after Netlify processes the form
            });
        }

        // Check for Netlify success parameters and auto-redirect to homepage
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('success') === 'true' || urlParams.has('form')) {
            // Show success toast
            const toast = document.getElementById('toast');
            if (toast) {
                toast.classList.add('show');
                
                // Auto-redirect to homepage after 3 seconds
                setTimeout(function() {
                    window.location.href = '/';
                }, 3000);
            }
        }
        
        // Close toast when X button is clicked
        const closeToast = document.getElementById('closeToast');
        if (closeToast) {
            closeToast.addEventListener('click', function() {
                document.getElementById('toast').classList.remove('show');
            });
        }
    });
</script>
